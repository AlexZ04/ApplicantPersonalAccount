{
  "openapi": "3.0.3",
  "info": {
    "title": "ApplicantPersonalAccount",
    "description": "ASP.NET Core Application for Applicant Personal Account",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Authorization",
      "description": "Authentification and Authorization"
    },
    {
      "name": "Staff",
      "description": "Managers and administration"
    },
    {
      "name": "Applicant",
      "description": "All actions with applicant"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "summary": "Register new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterModel"
              }
            }
          },
          "required": true
        },
        "security": [],
        "responses": {
          "204": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserRegisterModel": {
        "required": [
          "email",
          "name",
          "password",
          "birthdate"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 1000,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Please enter token",
        "scheme": "Bearer"
      }
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ]
}