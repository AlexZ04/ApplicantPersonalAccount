{
  "openapi": "3.0.3",
  "info": {
    "title": "ApplicantPersonalAccount",
    "description": "ASP.NET Core Application for Applicant Personal Account",
    "version": "1.0.0"
  },
  
  "tags": [
    {
      "name": "Authorization",
      "description": "Authentification and Authorization"
    },
    
    {
      "name": "User",
      "description": "User info and editing"
    },
    
    {
      "name": "Applicant",
      "description": "All actions with applicant"
    },
    
    {
      "name": "Staff",
      "description": "Managers and administration"
    }
    
  ],
  
  "paths": {
    
    "/auth/register": {
      "post" : {
        "tags": [
          "Authorization"
        ],
        "summary": "Register new user",
        
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterModel"
              }
            }
          },
          "required": true
        },
        
        "security": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponseModel"
                }
              }
            }
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
    "/auth/login": {
      "post" : {
        "tags": [
          "Authorization"
        ],
        "summary": "Login to system",
        
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLoginModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLoginModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserLoginModel"
              }
            }
          },
          "required": true
        },
        
        "security": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponseModel"
                }
              }
            }
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
    "/auth/logout": {
      "post" : {
        "tags": [
          "Authorization"
        ],
        "summary": "Logout from system",

        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
    "/user/change-password": {
      "put" : {
        "tags": [
          "User"
        ],
        "summary": "Change user password",
        
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PasswordEditModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PasswordEditModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PasswordEditModel"
              }
            }
          },
          "required": true
        },
        
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
    "/user/change-email": {
      "put" : {
        "tags": [
          "User"
        ],
        "summary": "Change user email (only for manager+)",
        
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailEditModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailEditModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmailEditModel"
              }
            }
          },
          "required": true
        },
        
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
    "/user/edit-profile": {
      "put" : {
        "tags": [
          "User"
        ],
        "summary": "Change user email (only for applicants)",
        
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ApplicantEditModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ApplicantEditModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ApplicantEditModel"
              }
            }
          },
          "required": true
        },
        
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
    "/user/profile": {
      "get" : {
        "tags": [
          "User"
        ],
        "summary": "Get user profile",
        
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileModel"
                }
              }
            }
          },
          "500": {
            "description": "InternalServerError",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseModel"
                }
              }
            }
          }
        }
      }
    },
    
  },
  
  "components": {
    "schemas": {
      
      "UserRegisterModel": {
        "required": [
          "email",
          "name",
          "phone",
          "gender",
          "birthdate",
          "password"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 1000,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "minLength": 1,
            "type": "string",
          },
          "gender": {
            "$ref": "#/components/schemas/Gender"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "citizenship": {
            "minLength": 1,
            "type": "string",
          },
          "address": {
            "minLength": 1,
            "type": "string",
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      
      "UserLoginModel": {
        "required": [
          "email",
          "name",
          "password",
          "birthdate"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 1000,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      
      "TokenResponseModel": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "refreshToken": {
            "type": "string"
          },
        },
        "additionalProperties": false
      },
      
      "PasswordEditModel": {
        "required": [
          "password",
        ],
        "type": "object",
        "properties": {
          "password": {
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      
      "EmailEditModel": {
        "required": [
          "email",
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      },
      
      "ApplicantEditModel": {
        "required": [
          "email",
          "name",
          "phone",
          "gender",
          "birthdate"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 1000,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "minLength": 1,
            "type": "string",
          },
          "gender": {
            "$ref": "#/components/schemas/Gender"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "citizenship": {
            "minLength": 1,
            "type": "string",
          },
          "address": {
            "minLength": 1,
            "type": "string",
          }
        },
        "additionalProperties": false
      },
      
      "Gender": {
        "enum": [
          "Male",
          "Female"
        ],
        "type": "string"
      },
      
      "ResponseModel": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      
      "Role": {
        "enum": [
          "Applicant",
          "Manager",
          "HeadManager",
          "Admin"
        ],
        "type": "string"
      },
      
      "UserProfileModel": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
          },
          "gender": {
            "$ref": "#/components/schemas/Gender"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "citizenship": {
            "type": "string",
          },
          "address": {
            "type": "string",
          }
        },
        "additionalProperties": false
      },
      
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Please enter token",
        "scheme": "Bearer"
      }
    }
  },
  
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}

